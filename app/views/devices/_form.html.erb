<%= form_for @device, :html => { :class => "form-horizontal device" } do |f| %>

  <% if @device.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @device.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mac_address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mac_address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mac_address) %>
  </div>
  <div class="form-group">
    <%= f.label :ip_address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ip_address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ip_address) %>
  </div>
  <div class="form-group">
    <%= f.label :vendor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :vendor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:vendor) %>
  </div>
  <div class="form-group">
    <%= f.label :hostname, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :hostname, :class => 'form-control' %>
    </div>
    <%=f.error_span(:hostname) %>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :notes, :class => 'form-control' %>
    </div>
    <%=f.error_span(:notes) %>
  </div>
  <div class="form-group">
    <%= f.label :last_seen_at, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_seen_at, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last_seen_at) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                devices_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
